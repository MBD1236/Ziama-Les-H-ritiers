{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Cadeaux</li>
                </ol>
            </div>
            <h4 class="page-title">Liste des cadeaux</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="d-flex justify-content-between mx-3 pt-2 gap-2 align-items-center">
                <div>
                    <form action="{{ path('app_admin_cadeau_search') }}" method="get" class="d-flex justify-content-between gap-1">
                        <input class="form-control" placeholder="Rechercher" name="recherche" value="{{ query ?? '' }}">
                        <button class="btn btn-primary"><span class="bi bi-search"></span></button>
                    </form>
                </div>
                <div>
                    <a href="{{ path('app_admin_cadeau_new')}}" class="btn btn-primary">Enregistrer une livraison</a>
                </div>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Client</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for k, c in cadeaux %}
                                <tr>
                                    <td>{{ k+1 }}</td>
                                    <td>{{ c.client.nom }} ({{ c.client.telephone }})</td>
                                    <td>{{ c.production.codeProduction }}</td>
                                    <td>{{ c.quantite }}</td>
                                    <td>{{ c.description }}</td>
                                    <td>{{ c.date|date('Y-m-d') }}</td>
                                    <td>
                                        <a href="{{ path('app_admin_cadeau_edit', {'id': c.id}) }}" class="bi-pencil"></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                </table>
                {{ knp_pagination_render(cadeaux) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
