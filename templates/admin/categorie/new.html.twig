{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_categorie_index') }}">Catégories</a></li>
                    <li class="breadcrumb-item active">Nouvelle catégorie</li>
                </ol>
            </div>
            <h4 class="page-title">Ajouter une catégorie</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-lg-8 offset-lg-2 col-md-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nom, "Nom de la catégorie") }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le nom de la catégorie'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, "Description") }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez la catégorie', 'rows': '4'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-auto">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-secondary">Retour</a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
