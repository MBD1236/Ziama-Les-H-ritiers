{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Modification</li>
                </ol>
            </div>
            <h4 class="page-title">Modification des commandes</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="header-title">Modification d'une commande</h4>
            </div>
            <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.client) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.production) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.user) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.quantite) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.modePaiement) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.dateCommande) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.save) }}
                </div>
                <!-- end col -->
            </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
