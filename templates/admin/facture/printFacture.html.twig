{% extends "printLayout/base.html.twig" %}
{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    
</style>
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-header text-center">
                <h2 class="mb-1">Groupe Mandela</h2>
                <h3>Facture : {{ facture.codeFacture }}</h3>
            </div>
            <div class="card-body">
                <p><strong>Date :</strong> {{ facture.commande.dateCommande|date('d/m/Y') }}</p>
                <p><strong>Client :</strong> {{ facture.commande.client.nom }}</p>

                <table class="table table-bordered mt-4">
                    <thead class="table-light">
                        <tr>
                            <th>Commande</th>
                            <th>Montant Réglé</th>
                            <th>Montant Restant</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ facture.commande.codeCommande }}</td>
                            <td class="text-end">{{ facture.montantRegle|number_format(2, ',', ' ') }} GNF</td>
                            <td class="text-end">{{ facture.montantRestant|number_format(2, ',', ' ') }} GNF</td>
                            <td class="text-center">
                                {% if facture.statut == 'payée' %}
                                    <span class="badge bg-success">Payée</span>
                                {% elseif facture.statut == 'partiellement payée' %}
                                    <span class="badge bg-warning text-dark">Partiellement Payée</span>
                                {% else %}
                                    <span class="badge bg-danger">Non Payée</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    <p><strong>Total Commande :</strong> {{ facture.commande.montantTotal|number_format(2, ',', ' ') }} GNF</p>
                </div>

            </div>
        </div>
    </div>
<script>
    window.onload = function() {
        window.print();
    }
</script>
{% endblock body %}
