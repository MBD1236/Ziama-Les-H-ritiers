{% extends "printLayout/base.html.twig" %}
{% block body %}

<div class="container mt-5 border p-4 card">
    <!-- En-tête -->
    <div class="row text-center">
        <div class="col-12">
            <h3 class="text-primary fw-bold">FACTURE DU CLIENT</h3>
            <h4 class="fw-bold">Ziama Les Héritiers</h4>
            <p>Contact : 625556078</p>
        </div>
    </div>

    <!-- Informations générales -->
    
    <div class="d-flex justify-content-between align-items-center bg-primary p-1 text-bg-info">
        <p><strong>Facture N° :</strong> {{ facture.codeFacture }}</p>
        <p><strong>Date :</strong> {{ facture.vente.dateVente|date('d/m/Y') }}</p>
    </div>
    <div class="mt-2">
        <p><strong>Nom :</strong> {{ facture.vente.client.nom }} </p>
        <p><strong>Adresse :</strong> {{ facture.vente.client.adresse }}</p>
        <p><strong>Téléphone :</strong> {{ facture.vente.client.telephone }}</p>
    </div>

    <!-- Tableau des produits -->
    <div class="row mt-2">
        <div class="col-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th class="text-bg-info">Désignation</th>
                        <th class="text-bg-info">Quantité</th>
                        <th class="text-bg-info">PVU</th>
                        <th class="text-bg-info">Prix total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ligne in facture.vente.lignes %}
                    <tr>
                        <td>{{ ligne.produit.nom }}</td>
                        <td>{{ ligne.quantite }}</td>
                        <td>{{ ligne.produit.prixVente }} GNF</td>
                        <td>{{ ligne.totalLigne|number_format(2, ',', ' ') }} GNF</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Résumé -->
    <div class="row">
        <div class="col-md-12">
            {% set montant = 0 %}
            {% for l in facture.vente.lignes %}
                {% set montant = montant + (l.totalLigne ? l.totalLigne : (l.prixUnitaire * l.quantite)) %}
            {% endfor %}
            <p><strong>Montant à payer :</strong> {{ montant|number_format(2, ',', ' ') }} GNF</p>
            <p><strong>Montant payé :</strong> {{ facture.montantRegle|number_format(2, ',', ' ') }} GNF</p>
            <p><strong>Reste à payer :</strong> {{ facture.montantRestant|number_format(2, ',', ' ') }} GNF</p>
        </div>
    </div>

    <!-- Note -->
    <div class="row">
        <div class="col-12">
            <p>
                Cette présente facture est arrêtée à une somme de : <strong>{{ facture.montantRegle|number_format(2, ',', ' ') }} GNF.</strong>
            </p>
        </div>
    </div>

    <!-- Gestionnaire -->
    <div class="row">
        <div class="col-12 text-end">
            <strong>Gestionnaire</strong>
        </div>
    </div>
</div>

<script>
    window.onload = function() {
        window.print();
    }
</script>
{% endblock body %}
