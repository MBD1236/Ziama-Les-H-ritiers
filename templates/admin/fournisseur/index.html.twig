{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Fournisseurs</li>
                </ol>
            </div>
            <h4 class="page-title">Liste des fournisseurs</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="d-flex justify-content-between mx-3 pt-2 gap-2 align-items-center">
                <div>
                    <form action="{{ path('app_admin_fournisseur_search') }}" method="get" class="d-flex justify-content-between gap-1">
                        <input class="form-control" placeholder="Rechercher" name="recherche" value="{{ query ?? '' }}">
                        <button class="btn btn-primary"><span class="bi bi-search"></span></button>
                    </form>
                </div>
                <div>
                    <a href="{{ path('app_admin_fournisseur_new')}}" class="btn btn-primary">Enregistrer une livraison</a>
                </div>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Téléphone</th>
                                <th>Email</th>
                                <th>Produit fourni</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for k, f in fournisseurs %}
                                <tr>
                                    <td>{{ k+1 }}</td>
                                    <td>{{ f.nom }}</td>
                                    <td>{{ f.adresse }}</td>
                                    <td>{{ f.telephone }}</td>
                                    <td>{{ f.email }}</td>
                                    <td>{{ f.produitFourni }}</td>
                                    <td class="d-flex gap-2 justify-content-end w-100">
                                        <a href="{{ path('app_admin_fournisseur_edit', {'id': f.id}) }}" class="btn btn-primary btn-sm bi-pencil"></a>
                                        <form action="{{ path('app_admin_fournisseur_delete', {'id': f.id}) }}" method="post">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger btn-sm bi-trash"></button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                </table>
                {{ knp_pagination_render(fournisseurs) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
