{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Livraisons</li>
                </ol>
            </div>
            <h4 class="page-title">Liste des livraisons</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="d-flex justify-content-between mx-3 pt-2 gap-2 align-items-center">
                <div>
                    <form action="{{ path('app_admin_livraison_search') }}" method="get" class="d-flex justify-content-between gap-1">
                        <input class="form-control" placeholder="Rechercher" name="recherche" value="{{ query ?? '' }}">
                        <button class="btn btn-primary"><span class="bi bi-search"></span></button>
                    </form>
                </div>
                <div>
                    <a href="{{ path('app_admin_livraison_new')}}" class="btn btn-primary">Enregistrer une livraison</a>
                </div>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Commande</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Montant</th>
                                <th>Client</th>
                                <th>Employe</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for k, l in livraisons %}
                                <tr>
                                    <td>{{ k+1 }}</td>
                                    <td>{{ l.commande.codeCommande }}</td>
                                    <td>{{ l.commande.production.codeProduction }}</td>
                                    <td>{{ l.commande.quantite }}</td>
                                    <td>{{ l.commande.montantTotal }} GNF</td>
                                    <td>{{ l.commande.client.nom }}</td>
                                    <td>{{ l.user.username }} - {{ l.user.email }}</td>
                                    <td>{{ l.dateLivraison|date('Y-m-d')}}</td>
                                    <td>{{ l.commande.statut }}</td>
                                    <td class="d-flex gap-2 justify-content-end w-100">
                                        <a href="{{ path('app_admin_livraison_facture', {'id': l.commande.id}) }}" class="btn btn-primary btn-sm bi-eye" title="Voir la facture"></a>
                                        <a href="{{ path('app_admin_livraison_edit', {'id': l.id}) }}" class="btn btn-primary btn-sm bi-pencil"></a>
                                        <button  type="button" class="btn btn-danger btn-sm bi-trash" data-bs-toggle="modal" data-bs-target="#danger-alert-modal-{{ k }}"></button>


                                        <!-- Danger Alert Modal -->
                                        <div id="danger-alert-modal-{{ k }}" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                            <div class="modal-dialog modal-sm">
                                                <div class="modal-content modal-filled bg-danger">
                                                    <div class="modal-body p-4">
                                                        <div class="text-center">
                                                            <i class="ri-close-circle-line h1"></i>
                                                            <h4 class="mt-2">Suppression!</h4>
                                                            <p class="mt-3">Voulez-vous vraiment supprimer cet enregistrement ?.</p>
                                                            <form action="{{ path('app_admin_livraison_delete', {'id': l.id}) }}" method="post">
                                                                <input type="hidden" name="_method" value="DELETE">
                                                                <button type="button" class="btn btn-light my-2" data-bs-dismiss="modal">Non</button>
                                                                <button type="submit" class="btn btn-light">Oui</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div><!-- /.modal-content -->
                                            </div><!-- /.modal-dialog -->
                                        </div><!-- /.modal -->
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                </table>
                {% if query is defined and query != '' %}
                {{ knp_pagination_render(livraisons) }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
