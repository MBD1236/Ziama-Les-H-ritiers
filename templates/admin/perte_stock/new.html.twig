{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_perte_stock_index') }}">Pertes de stock</a></li>
                    <li class="breadcrumb-item active">Nouvelle perte</li>
                </ol>
            </div>
            <h4 class="page-title">Enregistrer une perte</h4>
        </div>
    </div>
</div>
{% endblock title %}

{% block body %}
<div class="row">
    <div class="col-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row g-3">
                    <div class="col-md-12">
                        {{ form_label(form.produit) }}
                        {{ form_widget(form.produit) }}
                        {{ form_errors(form.produit) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.quantite) }}
                        {{ form_widget(form.quantite) }}
                        {{ form_errors(form.quantite) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.motif) }}
                        {{ form_widget(form.motif) }}
                        {{ form_errors(form.motif) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('app_admin_perte_stock_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}