{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Modification</li>
                </ol>
            </div>
            <h4 class="page-title">Modification des produits</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="header-title">Modification d'un produit</h4>
            </div>
            <div class="card-body">
                {{form_start(form)}}
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.nom) }}</div>
                    <div class="col-md-6">{{ form_row(form.categorie) }}</div>
                    <div class="col-md-6">{{ form_row(form.prixAchat) }}</div>
                    <div class="col-md-6">{{ form_row(form.prixVente) }}</div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.quantiteStock) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.nombreParCasier) }}
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">{{ form_row(form.seuilAlerte) }}</div>
                    <div class="col-md-6">{{ form_row(form.save) }}</div>
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
