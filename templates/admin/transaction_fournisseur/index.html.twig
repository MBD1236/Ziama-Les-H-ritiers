{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item active">Liste des transactions des fournisseurs</li>
                </ol>
            </div>
            <h4 class="page-title">Transaction des fournisseurs</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-12">
        {% include "admin/partials/_flash.html.twig" %}
        <div class="card">
            <div class="d-flex justify-content-between mx-3 pt-2 gap-2 align-items-center">
                <div>
                    <form action="{{ path('app_admin_transaction_fournisseur_search') }}" method="get" class="d-flex justify-content-between gap-1">
                        <input class="form-control" placeholder="Rechercher" name="recherche" value="{{ query ?? '' }}">
                        <button class="btn btn-primary"><span class="bi bi-search"></span></button>
                    </form>
                </div>
                <div>
                    <a href="{{ path('app_admin_transaction_fournisseur_new')}}" class="btn btn-primary">Enregistrer une transaction</a>
                    
                </div>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>NÂ°</th>
                                <th>Fournisseur</th>
                                <th>Montant</th>
                                <th>Mode paiement</th>
                                <th>Date transaction</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for k, t in transactions %}
                            <tr>
                                <td>{{ k+1 }}</td>
                                <td>{{ t.fournisseur.nom }} - {{ t.fournisseur.telephone }}</td>
                                <td>{{ t.montant }}</td>
                                <td>{{ r.montantPaiement }}</td>
                                <td>{{ r.dateTransaction|date('Y-m-d') }}</td>
                                <td>{{ r.description }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                </table>
                {{ knp_pagination_render(transactions) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}
