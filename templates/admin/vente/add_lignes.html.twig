{% extends "admin/base.html.twig" %}
{% block title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="ri-home-4-line me-1"></i>Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_vente_index') }}">Ventes</a></li>
                    <li class="breadcrumb-item active">Nouvelle ligne</li>
                </ol>
            </div>
            <h4 class="page-title">Enregistrement d'une nouvelle ligne de produit</h4>
        </div>
    </div>
</div>
{% endblock title %}
{% block body %}
<div class="row">
    <div class="col-md-12">
        {% include "admin/partials/_flash.html.twig" %}

        <div class="card">
            <div class="card-header">
                <h4>Vente: <span class="badge bg-primary">{{ vente.codeVente }}</span> 
                    | Client: <span class="badge bg-info">{{ vente.client.nom }}</span>
                </h4>
            </div>
            <div class="card-body">
                {# Formulaire d'ajout de ligne #}
                <div class="card mb-4 bg-light">
                    <div class="card-body">
                        <h5><i class="ri-add-line"></i> Ajouter une ligne</h5>
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.produit) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(form.quantite) }}
                                </div>
                                <div class="col-md-3" style="padding-top: 6.5px !important;">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="ri-check-line"></i> Ajouter
                                    </button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                {# Liste des lignes existantes #}
                <h5>Lignes de vente ({{ vente.lignes|length }})</h5>
                {% if vente.lignes|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th>Quantité</th>
                                    <th>Prix de vente</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set total = 0 %}
                                {% for ligne in vente.lignes %}
                                    {% set total = total + ligne.totalLigne %}
                                    <tr>
                                        <td>{{ ligne.produit.nom }}</td>
                                        <td>{{ ligne.quantite }}</td>
                                        <td>{{ ligne.produit.prixVente|number_format(0, ',', ' ') }} GNF</td>
                                        <td>{{ ligne.totalLigne|number_format(0, ',', ' ') }} GNF</td>
                                        <td>
                                            <form method="post" 
                                                  action="{{ path('app_admin_vente_delete_ligne', {
                                                      'id': vente.id, 
                                                      'ligneId': ligne.id
                                                  }) }}" 
                                                  style="display:inline"
                                                  onsubmit="return confirm('Supprimer cette ligne ?')">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr class="table-info">
                                    <th colspan="3" class="text-end">TOTAL</th>
                                    <th>{{ total|number_format(0, ',', ' ') }} GNF</th>
                                    <th></th>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <hr>
                    <form method="post" action="{{ path('app_admin_vente_finaliser', {'id': vente.id}) }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="ri-check-line"></i> Finaliser et créer la facture
                        </button>
                        <a href="{{ path('app_admin_vente_index') }}" class="btn btn-secondary">
                            <i class="ri-close-line"></i> Retour
                        </a>
                    </form>
                {% else %}
                    <p class="text-muted">Aucune ligne ajoutée pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}